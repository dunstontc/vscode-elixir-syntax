{
    "name": "vscode-elixir-syntax",
    "displayName": "vscode-elixir-syntax",
    "description": "Syntax highlighting for elixir.",
    "version": "0.0.1",
    "publisher": "dunstontc",
    "repository": {
        "type": "git",
        "url": "https://github.com/dunstontc/vscode-elixir-syntax.git"
    },
    "bugs": {
        "url": "https://github.com/dunstontc/vscode-elixir-syntax/issues"
    },
    "scripts": {"start": "gulp watch"},
    "engines": {"vscode": "^1.20.0"},
    "categories": ["Programming Languages"],
    "contributes": {
        "languages": [
            {
                "id": "elixir",
                "aliases": ["elixir"],
                "extensions": [".ex", ".exs"],
                "filenames": ["elixirfile"],
                "firstLine": "^...",
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "elixir",
                "scopeName": "source.elixir",
                "path": "./syntaxes/elixir.tmLanguage.json"
            }
        ]
    },
    "galleryBanner": {
        "color": "#1e1e1e",
        "theme": "dark"
    },
    "devDependencies": {
        "gulp": "^3.9.1",
        "gulp-json5-to-json": "^0.2.1",
        "gulp-merge-json": "^1.3.0"
    }
}
